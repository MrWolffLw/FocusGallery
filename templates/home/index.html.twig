{% extends 'base.html.twig' %}

{% block title %}Focus Gallery
{% endblock %}

{% block body %}
	<style>
		.container {
			display: flex;
			justify-self: center;
			width: 80rem;
			flex-direction: row;
			justify-content: center;

		}
		.cat {
			display: flex;
			justify-content: center;
			align-items: center;
			font-size: 15px;
			height: 30px;
			width: 100px;
			border: 1px solid black;
			border-radius: 10px;
			text-decoration: none;
			color: black;
			margin: 10px;
			
		}
		img {
			
			width: 100%;
			height: 300px;
			object-fit: cover;
			border-radius: 15px;

			/* width: 390px; */
		}
		.img {
			display: grid;
			gap: 50px;
			margin: 20px; 


		}

		@media(max-width: 599px) {
			.img {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		@media(min-width: 600px) and(max-width: 1023px) {
			.img {
				grid-template-columns: repeat(3, 1fr);
			}
		}

		@media(min-width: 1024px) {
			.img {
				grid-template-columns: repeat(3, 1fr);
			}
		}
		.titre {
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 30px
		}
		.cards {
			border-radius: 10px;
			background-color: #ffff;
			box-shadow: 15px 15px 25px -30px black;
			/* border: 0.1px solid black; */
		}
		p {
			margin: 10px;
		}
		article {
			
			border-radius: 10px;
			height: 100%;
			padding: 10px;
		}
		.img-titre{
			font-size: 35px;
		}
		.img-titre, .img-cat{
			display: flex;
			justify-content: space-between;
			align-items: center;
		
		}
	</style>

	<h1 class="titre">Mes projets</h1>
	<div class="container">
		<a class="cat" href="{{ path('index') }}">Tout</a>
		{% for category in categories %}
			<a class="cat" href="{{path('index', {id: category.id})}}" style="background-color:{{category.color}}">{{category.nameFr}}</a>
		{% endfor %}
	</div>
	<div class="img">
		{% for photo in photos %}
			<div class="cards">
				<article>
					<a href="{{path ('show', {id: photo.id})}}"><img  src="{{ asset('uploads/images/' ~ photo.imageName) }}" alt="{{ photo.titleFr }}"></a>
					
					<p class="img-titre">{{photo.titleFr}} <span class="cat"  > {{photo.category}} </span></p>
				</article>
				
			</div>
		{% endfor %}

	</div>


{% endblock %}
