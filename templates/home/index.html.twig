{% extends 'base.html.twig' %}

{% block title %}Focus Gallery
{% endblock %}

{% block body %}
	<style>
		.container {
			display: flex;
			justify-self: center;
			width: 80rem;
			flex-direction: row;
			justify-content: center;

		}
		.cat {
			display: flex;
			justify-content: center;
			align-items: center;
			font-size: 15px;
			height: 30px;
			width: 100px;
			border: 2px solid black;
			border-radius: 10px;
			text-decoration: none;
			color: black;
			margin: 10px;
		}
		img {
			
			width: 100%;
			height: 100px;
			object-fit: cover;
			border-radius: 15px;

			/* width: 390px; */
		}
		.img {
			display: grid;
			gap: 50px;
			margin: 20px; 


		}

		@media(max-width: 599px) {
			.img {
				grid-template-columns: repeat(2, 1fr);
			}
		}

		@media(min-width: 600px) and(max-width: 1023px) {
			.img {
				grid-template-columns: repeat(3, 1fr);
			}
		}

		@media(min-width: 1024px) {
			.img {
				grid-template-columns: repeat(3, 1fr);
			}
		}
		.titre {
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 30px
		}
		.cards {
			border-radius: 10px;
			background-image: linear-gradient(#e2e2e2ff, #fefefe);
			box-shadow: 15px 15px 25px -25px black;
		}
		p {
			margin: 10px;
		}
		article {
			margin: 0 auto;
			height: 300px;
		}
	</style>

	<h1 class="titre">Découvrez nos clichés</h1>
	<div class="container">
		<a class="cat" href="{{ path('index') }}">Tout</a>
		{% for category in categories %}
			<a class="cat" href="{{path('index', {id: category.id})}}">{{category.nameFr}}</a>
		{% endfor %}
	</div>
	<div class="img">
		{% for photo in photos %}
			<div class="cards">
				<article>
					<a href="{{path ('show', {id: photo.id})}}"><img  src="{{ asset('uploads/images/' ~ photo.imageName) }}" alt="{{ photo.titleFr }}"></a>
					<p>{{photo.titleFr}}</p>
					<span> {{photo.category}} </span>
				</article>
				
			</div>

		{% endfor %}
	</div>


{% endblock %}
